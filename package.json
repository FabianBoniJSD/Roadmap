{
  "name": "roadmap-next",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,mjs}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,mjs}\"",
    "security:audit": "npm audit --audit-level=moderate",
    "pre-commit": "lint-staged",
    "secrets:generate-key": "node scripts/encrypt-secrets.mjs generate-key",
    "secrets:encrypt": "node scripts/encrypt-secrets.mjs encrypt",
    "secrets:decrypt": "node scripts/encrypt-secrets.mjs decrypt",
    "secrets:verify": "node scripts/encrypt-secrets.mjs verify",
    "pm2:restart": "powershell -ExecutionPolicy Bypass -File scripts/restart-pm2.ps1",
    "pm2:stop": "pm2 delete roadmap-app",
    "pm2:logs": "pm2 logs roadmap-app",
    "pm2:status": "pm2 status",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed"
  },
  "dependencies": {
    "@roadmap/entra-sso": "0.1.0",
    "@fluentui/react": "^8.121.2",
    "@pnp/sp": "^3.20.0",
    "@prisma/client": "^5.20.0",
    "@types/node": "20.11.30",
    "@xmldom/xmldom": "^0.9.5",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "https-proxy-agent": "^7.0.6",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.2.33",
    "react": "18.3.1",
    "react-datepicker": "^6.0.0",
    "react-dom": "18.3.1",
    "react-icons": "^5.5.0",
    "undici": "^6.22.0",
    "uuid": "^9.0.1"
  },
  "overrides": {
    "xmldom": "npm:@xmldom/xmldom@^0.9.5",
    "jsonwebtoken": "^9.0.2",
    "tough-cookie": "^4.1.4",
    "cookie": "^0.7.2",
    "got": "^11.8.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@types/uuid": "^9.0.0",
    "@types/xmldom": "^0.1.34",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.1",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "postcss": "8.4.38",
    "prettier": "^3.4.2",
    "prisma": "^5.20.0",
    "tailwindcss": "3.4.9",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "node prisma/seed.mjs"
  }
}
